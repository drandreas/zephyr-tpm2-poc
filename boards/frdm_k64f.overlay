// Resize storage to 64KiB
/delete-node/ &storage_partition;

&flash0 {
	partitions {
		storage_partition: partition@10000 {
			label = "storage";
			reg = <0x00010000 0x00010000>;
		};
	};
};

&arduino_spi {
	cs-gpios = <&arduino_header 16 0>;

	spi_tpm: tpm@0 {
		compatible = "infineon,tpm";
		label = "tpm";
		spi-max-frequency = <1000000>;
		reg = <0x0>;
	};
};
